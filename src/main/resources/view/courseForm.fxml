<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="courseform" prefHeight="700.0" prefWidth="975.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.controller.CourseController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="975.0" layoutY="1.0" pickOnBounds="true" smooth="false" style="-fx-opacity: 0.7;">
         <image>
            <Image url="@../assest/rb_43060.png" />
         </image>
      </ImageView>
      <Label layoutX="16.0" layoutY="14.0" text="Course Management ‍" textFill="WHITE" underline="true">
         <font>
            <Font name="Times New Roman" size="32.0" />
         </font>
      </Label>
      <TableView fx:id="tblcourse" layoutX="88.0" layoutY="435.0" onMouseClicked="#rowOnMouseClicked" prefHeight="250.0" prefWidth="800.0">
         <columns>
            <TableColumn fx:id="colcourseid" prefWidth="175.0" text="Course Id" />
            <TableColumn fx:id="colcoursename" minWidth="0.0" prefWidth="275.0" text="Course Name" />
            <TableColumn fx:id="colduration" minWidth="0.0" prefWidth="275.0" text="Duration" />
            <TableColumn fx:id="colfees" minWidth="0.0" prefWidth="250.0" text="Fees" />
         </columns>
      </TableView>
      <JFXTextField fx:id="txtsearch" layoutX="102.0" layoutY="377.0" prefHeight="25.0" prefWidth="200.0" style="-fx-text-fill: white;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></JFXTextField>
      <JFXButton fx:id="btnsearchcourse" layoutX="393.0" layoutY="374.0" onAction="#btnsearchcourseOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: yellow;" text="Search 🔍">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btndelete" layoutX="551.0" layoutY="305.0" onAction="#btndeleteOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: red;" text="Delete 🗑">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btnupdate" layoutX="667.0" layoutY="305.0" onAction="#btnupdateOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: green;" text="Update ⚙">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </JFXButton>
      <Label layoutX="99.0" layoutY="93.0" text="Course Id :" textFill="WHITE">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtscourseid" editable="false" layoutX="99.0" layoutY="132.0" onKeyReleased="#txtscourseidOnKeyReleased" prefHeight="25.0" prefWidth="200.0" style="-fx-text-fill: white;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></JFXTextField>
      <Label layoutX="102.0" layoutY="192.0" text="Fees : " textFill="WHITE">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtfees" layoutX="102.0" layoutY="229.0" onKeyReleased="#txtfeesOnKeyReleased" prefHeight="25.0" prefWidth="200.0" style="-fx-text-fill: white;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></JFXTextField>
      <Label layoutX="383.0" layoutY="93.0" text="Course Name :" textFill="WHITE">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtcoursename" layoutX="383.0" layoutY="132.0" onKeyReleased="#txtcoursenameOnKeyReleased" prefHeight="25.0" prefWidth="200.0" style="-fx-text-fill: white;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></JFXTextField>
      <Label layoutX="677.0" layoutY="93.0" text="Duration : " textFill="WHITE">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtduration" layoutX="677.0" layoutY="132.0" onKeyReleased="#txtdurationOnKeyReleased" prefHeight="25.0" prefWidth="200.0" style="-fx-text-fill: white;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></JFXTextField>
      <JFXButton fx:id="btnclear" layoutX="781.0" layoutY="305.0" onAction="#btnclearOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: orange;" text="Clear ✨">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btnaddcourse" layoutX="435.0" layoutY="305.0" onAction="#btnaddcourseOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: blue;" text="Add  ➕">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
